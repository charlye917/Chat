<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageViewProfileLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_account"
        app:layout_constraintBottom_toBottomOf="@+id/textViewMessageLeft"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewMessageLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bubble_chat_left"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:maxWidth="300dp"
        android:paddingBottom="8dp"
        android:paddingEnd="8dp"
        android:paddingStart="18dp"
        android:paddingTop="8dp"
        android:text="HOLA MEJOR AMIGO"
        app:layout_constraintStart_toEndOf="@+id/imageViewProfileLeft"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTimeLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="4dp"
        android:text="12:12pm"
        android:textSize="7sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/textViewMessageLeft"
        app:layout_constraintStart_toEndOf="@+id/textViewMessageLeft"/>

</androidx.constraintlayout.widget.ConstraintLayout>